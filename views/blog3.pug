html 
    head 
        title #{blogTitle}
        description #{blogDescription} 
        script(src='https://cdn.tailwindcss.com')
    body(class='bg-gray-900') 
        section.text-gray-400.bg-gray-900.body-font(class='lg:px-36 px-1')
            .py-10.mx-auto(class="px-10 lg:px-5")
                h2.text-green-400.font-semibold.text-3xl.mb-10 Recent Posts
                .flex.flex-wrap.-m-4
                    each post in posts
                        div(class='lg:w-1/3 w-full lg:p-4 p-2')
                            .h-full.border-2.border-gray-800.rounded-lg.overflow-hidden.shadow-lg
                                div(class='w-full lg:h-48')
                                    img.object-contain.object-center.max-h-full.max-w-full.mx-auto.my-2( src=(post.attachments[0].location || '/images/default-image.png') alt=post.attachments[0].name)
                                .p-2.py-3 
                                    h1.title-font.text-lg.font-medium.text-white.mb-3 #{post.subject}
                                    p.leading-relaxed.mb-3.text-gray-100 #{post.preview}
                                    .flex.items-center.flex-wrap.mt-2
                                        a.text-green-400.inline-flex.items-center(class='md:mb-2 lg:mb-0 hover:text-green-600' href=post.read_more_link)
                                            | Read More 
                                            svg.w-4.h-4.ml-2(viewbox='0 0 24 24' stroke='currentColor' stroke-width='2' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                                path(d='M5 12h14')
                                                path(d='M12 5l7 7-7 7')
                                        span.text-gray-500.mr-3.ml-auto.leading-none.text-sm.pr-3.py-1(class='lg:ml-auto md:ml-0')
                                            | #{post.published}