html 
    head 
        title #{blogTitle}
        description #{blogDescription} 
        script(src='https://cdn.tailwindcss.com')
    body(class='bg-gray-900') 
        nav.flex.items-center.justify-between.flex-wrap(class='xl:px-64 px-5 md:py-12 py-6')
            .flex.items-center.flex-shrink-0.text-green-400.mr-6
                svg.fill-current.h-8.w-8.mr-2(width='54' height='54' viewbox='0 0 54 54' xmlns='http://www.w3.org/2000/svg')
                    path(d='M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z')
                span.font-semibold.text-2xl.tracking-tight Blog
            div(class='inline-block lg:hidden bg-indigo-600')
                button.flex.items-center.px-3.py-2.border.rounded.text-teal-200.border-teal-400(class='hover:text-white hover:border-white')
                    svg.fill-current.h-5.w-5(viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                        path(d='M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z')
            div(class='hidden lg:flex items-center')
                div(class='lg:flex-grow')
                a.block.mt-4.text-green-400.font-semibold.mr-4(href='#responsive-header' class='lg:inline-block lg:mt-0 hover:text-green-700')
                    | Docs
                a.block.mt-4.text-green-400.font-semibold.mr-4(href='#responsive-header' class='lg:inline-block lg:mt-0 hover:text-green-700')
                    | Examples
                a.block.mt-4.text-green-400.font-semibold(href='#responsive-header' class='lg:inline-block lg:mt-0 hover:text-green-700')
                    | Blog
                div
                    a.inline-block.text-sm.px-4.py-2.leading-none.border.rounded.text-green-400.border-green-400.mt-4.font-bold(href='#' class='md:ml-5 hover:border-transparent hover:text-gray-900 hover:bg-green-400 lg:mt-0') Download
        
        section.text-gray-400.bg-gray-900.body-font(class='lg:px-36 px-1')
            .py-10.mx-auto(class="px-10 lg:px-5")
                h2.text-green-400.font-semibold.text-3xl.mb-10 Recent Posts
                .flex.flex-wrap.-m-4
                    each post in posts
                        div(class='lg:w-1/3 w-full lg:p-4 p-2')
                            .h-full.border-2.border-gray-800.rounded-lg.overflow-hidden.shadow-lg
                                if (post.image && post.image != '')
                                    div(class='w-full lg:h-48')
                                        img.object-contain.object-center.max-h-full.max-w-full.mx-auto.my-2( src=post.attachments[0].location alt=post.attachments[0].name)
                                else 
                                    div(class="w-full lg:h-48")
                                        img( src='/images/default-image.png' alt='placeholder')
                                .p-2.py-3
                                    h1.title-font.text-lg.font-medium.text-white.mb-3 #{post.subject}
                                    p.leading-relaxed.mb-3.text-gray-300.truncate #{post.preview}
                                    .flex.items-center.flex-wrap.mt-2
                                        a.text-green-400.inline-flex.items-center(class='md:mb-2 lg:mb-0 hover:text-green-600' href=post.read_more_link)
                                            | Read More 
                                            svg.w-4.h-4.ml-2(viewbox='0 0 24 24' stroke='currentColor' stroke-width='2' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                                path(d='M5 12h14')
                                                path(d='M12 5l7 7-7 7')
                                        span.text-gray-500.mr-3.ml-auto.leading-none.text-sm.pr-3.py-1(class='lg:ml-auto md:ml-0')
                                            | #{post.published}